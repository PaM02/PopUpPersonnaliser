        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/titleView"
        android:layout_marginTop="20dp"
        android:text="je suis le message" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
